{% block header %}

<header>
    <a class="logo" href="{{ path('index') }}">
        SnowTricks
    </a>
    <ul class="mt-3">
        <li class="is-mobile">
            <a href="{{ path('index') }}">
                <i class="bi bi-house-door"></i>
                <span>Home</span>
            </a>
        </li>
        <li class="is-mobile">
            <a href="{{ path('_trick.list') }}">
                <i class="bi bi-columns-gap"></i>
                <span>Tricks</span>
            </a>
        </li>
        {% if app.user %}
        <li class="is-mobile">
            <a href="{{ path('app_logout') }}">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </li>
        {% else %}
        <li class="is-mobile">
            <a href="{{ path('app_login') }}">
                <i class="bi bi-person-circle"></i>
                <span>Sign In</span>
            </a>
        </li>
        <li>
            <a href="{{ path('app_register') }}">
                <span>Sign Up</span>
            </a>
        </li>
        {% endif %}
    </ul>
</header>

{% endblock %}
